// Material colors from:
// https://www.materialpalette.com/indigo/pink
$dark-primary-color =   #303F9F
$primary-color =        #3F51B5
$light-primary-color =  #C5CAE9
$white =                #FFF
$accented =             #FF4081
$dark-text =            #212121
$light-text =           #727272
$borders =              #B6B6B6

// Roboto [google fonts]
$roboto = 'Roboto', sans-serif

indigo-bg()
  background $primary-color
  color $white

indigo-dark-bg()
  background $dark-primary-color
  color $white

white-bg()
  background $white
  color $dark-text

accented-colors()
  color $accent

body, html
  indigo-dark-bg()
  position relative
  min-height 100%
  min-width 100%
  margin 0
  font-size 15px
  font-family $roboto
a
  color inherit
  text-decoration none
  &:hover
    text-decoration underline

// header
.metronome-wrapper
  indigo-bg()
  position relative
  max-width 1200px
  min-width 90%
  padding 0 5%
  margin 0 auto

.metronome-title
  text-align center

.control-icons
  height 20px
  cursor pointer
  g
    fill $accented
    transition(.5s)
    &:hover
      fill $white